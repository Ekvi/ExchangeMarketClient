<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context="com.ekvilan.exchangemarket.view.activities.RatesActivity">

    <include
        android:id="@+id/rates_tool_bar"
        layout="@layout/rates_tool_bar" />

    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rates_tool_bar"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:background="@drawable/main_background" >

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/rates_header" >
            <TextView
                android:layout_weight="1"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:text="@string/ratesBuying"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:text="@string/ratesSelling"
                android:textSize="20sp"
                android:textStyle="italic|bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/rates_row" >
            <TextView
                android:layout_weight="1"
                android:text="@string/rowBanks"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/banks_buy"
                android:textSize="26sp"
                android:textStyle="italic"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/banks_sale"
                android:textSize="26sp"
                android:textStyle="italic"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/rates_row" >
            <TextView
                android:layout_weight="1"
                android:text="@string/rowMarket"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/market_buy"
                android:layout_weight="1"
                android:textSize="26sp"
                android:textStyle="italic"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/market_sale"
                android:layout_weight="1"
                android:textSize="26sp"
                android:textStyle="italic"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/rates_row" >
            <TextView
                android:layout_weight="1"
                android:text="@string/rowNbu"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/nbu_buy"
                android:layout_weight="1"
                android:textSize="26sp"
                android:textStyle="italic"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_weight="1"
                android:textSize="26sp"
                android:textStyle="italic"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
